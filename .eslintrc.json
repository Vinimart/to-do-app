{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-undef": "off",
        "no-alert": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "class-methods-use-this": "off"
    }
}
